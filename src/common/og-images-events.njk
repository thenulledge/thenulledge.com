---
fontDisplay: "'Red Hat Display', 'Arial Black', sans-serif"
fontBody: "'Atkinson Hyperlegible', Arial, sans-serif"
background: '#1a1a1a'
text: '#efdf53'
siteUrl: 'thenulledge.com'
pagination:
  data: collections.events2026
  size: 1
  alias: event
permalink: '/assets/og-images/event-{{ event.id }}-preview.svg'
eleventyExcludeFromCollections: true
---

<svg
  width="1200"
  height="630"
  viewBox="0 0 1200 630"
  version="1.1"
  xmlns="http://www.w3.org/2000/svg"
  xmlns:xlink="http://www.w3.org/1999/xlink"
>
  {% set eventDate = event.when.start | formatDate('MMMM D, YYYY') %}
  {% set titleInLines = event.name | splitlines(30) %}
  {% set descriptionInLines = event.description | splitlines(45) %}
  {% set logoBase64 = '/assets/images/nullEDGElogo.png' | imageToBase64 %}

  <!-- Background -->
  <rect id="bg" width="100%" height="100%" fill="{{ background }}" />

  <!-- nullEDGE Logo (Top Left) -->
  {% if logoBase64 %}
  <image 
    href="{{ logoBase64 }}" 
    x="60" 
    y="40" 
    width="300" 
    height="50"
    preserveAspectRatio="xMidYMid meet"
  />
  {% endif %}

  <!-- Event Badge at Top Right -->
  <text
    font-family="{{ fontBody }}"
    font-size="20"
    font-weight="600"
    fill="{{ text }}"
    opacity="0.8"
    letter-spacing="1"
    text-anchor="end"
  >
    <tspan x="1140" y="60">nullEDGE 2026</tspan>
  </text>

  <!-- Event Name -->
  <text
    id="event-name"
    font-family="{{ fontDisplay }}"
    font-size="76"
    font-weight="900"
    fill="{{ text }}"
    letter-spacing="-2"
  >
    {% for line in titleInLines %}
      <tspan x="60" y="{{ 140 + loop.index0 * 90 }}">{{ line }}</tspan>
    {% endfor %}
  </text>

  <!-- Event Date -->
  <text
    font-family="{{ fontBody }}"
    font-size="32"
    font-weight="600"
    fill="{{ text }}"
    opacity="0.85"
    letter-spacing="-0.5"
  >
    <tspan x="60" y="340">{{ eventDate }}</tspan>
  </text>

  <!-- Virtual Event -->
  <text
    font-family="{{ fontBody }}"
    font-size="32"
    font-weight="600"
    fill="{{ text }}"
    opacity="0.85"
    letter-spacing="-0.5"
  >
    <tspan x="60" y="385">Virtual Event</tspan>
  </text>

  <!-- Event Description -->
  <text
    font-family="{{ fontBody }}"
    font-size="24"
    font-weight="400"
    fill="{{ text }}"
    opacity="0.7"
    letter-spacing="-0.3"
  >
    {% for line in descriptionInLines %}
      {% if loop.index0 < 2 %}
        <tspan x="60" y="{{ 445 + loop.index0 * 32 }}">{{ line }}</tspan>
      {% endif %}
    {% endfor %}
  </text>

  <!-- Footer URL (bottom right) -->
  <text
    font-family="{{ fontBody }}"
    font-size="22"
    font-weight="500"
    fill="{{ text }}"
    opacity="0.6"
    letter-spacing="-0.5"
    text-anchor="end"
  >
    <tspan x="1140" y="590">{{ siteUrl }}</tspan>
  </text>

  <!-- Decorative Element -->
  <rect x="0" y="0" width="8" height="630" fill="{{ text }}" opacity="0.3" />

</svg>
