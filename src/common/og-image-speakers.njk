---
fontDisplay: "'Red Hat Display', 'Arial Black', sans-serif"
fontBody: "'Atkinson Hyperlegible', Arial, sans-serif"
background: '#1a1a1a'
text: '#efdf53'
siteUrl: 'thenulledge.com'
permalink: '/assets/og-images/page-speakers-preview.svg'
eleventyExcludeFromCollections: true
---

<svg
  width="1200"
  height="630"
  viewBox="0 0 1200 630"
  version="1.1"
  xmlns="http://www.w3.org/2000/svg"
  xmlns:xlink="http://www.w3.org/1999/xlink"
>
  {% set titleInLines = "Speak at nullEDGE 2026" | splitlines(35) %}
  {% set descriptionInLines = "Share your ServiceNow expertise with folks worldwide" | splitlines(50) %}

  <!-- Background -->
  <rect id="bg" width="100%" height="100%" fill="{{ background }}" />

  <!-- nullEDGE Branding -->
  <text
    font-family="{{ fontDisplay }}"
    font-size="48"
    font-weight="900"
    fill="{{ text }}"
    letter-spacing="-1"
  >
    <tspan x="60" y="100">nullEDGE</tspan>
  </text>

  <!-- Page Title -->
  <text
    id="title"
    font-family="{{ fontDisplay }}"
    font-size="64"
    font-weight="900"
    fill="{{ text }}"
    letter-spacing="-1.5"
  >
    {% for line in titleInLines %}
      <tspan x="60" y="{{ 240 + loop.index0 * 75 }}">{{ line }}</tspan>
    {% endfor %}
  </text>

  <!-- Description -->
  <text
    font-family="{{ fontBody }}"
    font-size="28"
    font-weight="400"
    fill="{{ text }}"
    opacity="0.75"
    letter-spacing="-0.3"
  >
    {% for line in descriptionInLines %}
      {% if loop.index0 < 2 %}
        <tspan x="60" y="{{ 470 + loop.index0 * 36 }}">{{ line }}</tspan>
      {% endif %}
    {% endfor %}
  </text>

  <!-- Footer URL (bottom right) -->
  <text
    font-family="{{ fontBody }}"
    font-size="22"
    font-weight="500"
    fill="{{ text }}"
    opacity="0.6"
    letter-spacing="-0.5"
    text-anchor="end"
  >
    <tspan x="1140" y="590">{{ siteUrl }}</tspan>
  </text>

  <!-- Decorative Element -->
  <rect x="0" y="0" width="8" height="630" fill="{{ text }}" opacity="0.3" />

</svg>
