---
fontDisplay: "'Red Hat Display', 'Arial Black', sans-serif"
fontBody: "'Atkinson Hyperlegible', Arial, sans-serif"
background: '#1a1a1a'
text: '#efe154'
siteUrl: 'thenulledge.com'
permalink: '/assets/og-images/homepage-preview.svg'
eleventyExcludeFromCollections: true
---

<svg
  width="1200"
  height="630"
  viewBox="0 0 1200 630"
  version="1.1"
  xmlns="http://www.w3.org/2000/svg"
  xmlns:xlink="http://www.w3.org/1999/xlink"
>
  {% set logoBase64 = '/assets/images/nullEDGElogo.png' | imageToBase64 %}
  
  <!-- Background -->
  <rect id="bg" width="100%" height="100%" fill="{{ background }}" />

  <!-- nullEDGE Logo (Top Left) -->
  {% if logoBase64 %}
  <image 
    href="{{ logoBase64 }}" 
    x="60" 
    y="60" 
    width="400" 
    height="66.67"
    preserveAspectRatio="xMidYMid meet"
  />
  {% endif %}

  <!-- Year Badge -->
  <text
    font-family="{{ fontDisplay }}"
    font-size="48"
    font-weight="900"
    fill="{{ text }}"
    letter-spacing="1"
  >
    <tspan x="470" y="110">2026</tspan>
  </text>

  <!-- Tagline -->
  <text
    font-family="{{ fontBody }}"
    font-size="42"
    font-weight="600"
    fill="{{ text }}"
    opacity="0.9"
    letter-spacing="-0.5"
  >
    <tspan x="60" y="180">Free ServiceNow Conference</tspan>
  </text>

  <!-- Main Event Date -->
  <text
    font-family="{{ fontBody }}"
    font-size="36"
    font-weight="600"
    fill="{{ text }}"
    opacity="0.85"
    letter-spacing="-0.5"
  >
    <tspan x="60" y="250">October 16, 2026</tspan>
  </text>

  <!-- Event Series Info -->
  <text
    font-family="{{ fontBody }}"
    font-size="28"
    font-weight="500"
    fill="{{ text }}"
    opacity="0.8"
    letter-spacing="-0.3"
  >
    <tspan x="60" y="310">4 Virtual Events • 1,000+ Attendees</tspan>
  </text>

  <!-- Description -->
  <text
    font-family="{{ fontBody }}"
    font-size="24"
    font-weight="400"
    fill="{{ text }}"
    opacity="0.7"
    letter-spacing="-0.3"
  >
    <tspan x="60" y="370">Deep technical sessions, real code,</tspan>
    <tspan x="60" y="405">zero sales pitches. 100% free.</tspan>
  </text>

  <!-- Call to Action -->
  <text
    font-family="{{ fontDisplay }}"
    font-size="32"
    font-weight="800"
    fill="{{ text }}"
    letter-spacing="0.5"
  >
    <tspan x="60" y="470">Join the Community →</tspan>
  </text>

  <!-- Footer URL (bottom right) -->
  <text
    font-family="{{ fontBody }}"
    font-size="22"
    font-weight="500"
    fill="{{ text }}"
    opacity="0.6"
    letter-spacing="-0.5"
    text-anchor="end"
  >
    <tspan x="1140" y="590">{{ siteUrl }}</tspan>
  </text>

  <!-- Decorative Accent Line -->
  <rect x="0" y="0" width="8" height="630" fill="{{ text }}" opacity="0.3" />

</svg>