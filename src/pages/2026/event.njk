---js
{
  pagination: {
    data: "events2026Array",
    size: 1,
    alias: "eventData"
  },
  layout: "event",
  schema: "Event",
  eleventyComputed: {
    title: (data) => {
      const date = new Date(data.eventData.when.start);
      const options = { year: 'numeric', month: 'long', day: 'numeric' };
      const formattedDate = date.toLocaleDateString('en-US', options);
      return `${data.eventData.name} - ${formattedDate}`;
    },
    description: (data) => data.eventData.description,
    permalink: (data) => `${data.eventData.url}/`,
    event: (data) => data.eventData,
    breadcrumb: (data) => ({
      parent: 'Home',
      parentUrl: '/',
      current: data.eventData.name
    })
  }
}
---

{# Simple Event Page - No type conditionals, no client-side JS #}

<article class="event-page">
  {# Hero #}
  <header class="event-hero">
    <h1>{{ eventData.name }}</h1>
    <p class="event-description">{{ eventData.description }}</p>
    
    {% if eventData.registrationUrl %}
      <a href="{{ eventData.registrationUrl }}" class="btn btn-lg btn-primary" target="_blank" rel="noopener noreferrer">
        Register Free
      </a>
    {% endif %}
  </header>

  {# Event Details #}
  <section class="event-details">
    <dl class="event-meta">
      <div class="meta-item">
        <dt>Date</dt>
        <dd>{{ eventData.when.start | formatDate('MMMM D, YYYY') }}</dd>
      </div>
      <div class="meta-item">
        <dt>Time</dt>
        <dd>{{ eventData.when.start | formatSessionTime }}</dd>
      </div>
      <div class="meta-item">
        <dt>Duration</dt>
        <dd>{{ eventData.duration }}</dd>
      </div>
      <div class="meta-item">
        <dt>Location</dt>
        <dd>Virtual Event</dd>
      </div>
      <div class="meta-item">
        <dt>Cost</dt>
        <dd>Free</dd>
      </div>
    </dl>
  </section>

  {# Schedule - Simple text table #}
  {% if eventData.sessions and eventData.sessions.length %}
  <section class="event-schedule">
    <h2>Schedule</h2>
    <p class="schedule-note">All times shown in US Eastern</p>
    
    <table class="schedule-table">
      <thead>
        <tr>
          <th>Time</th>
          <th>Session</th>
          <th>Speaker</th>
        </tr>
      </thead>
      <tbody>
        {% for session in eventData.sessions %}
        <tr>
          <td class="schedule-time">{{ session.time_start | formatSessionTime }}</td>
          <td class="schedule-title">{{ session.name }}</td>
           <td class="schedule-speaker">
            {%- if session.speakers and session.speakers.length -%}
              {%- for speaker in session.speakers -%}
                {%- set personData = people[speaker.name] -%}
                {%- set speakerLinkedin = personData.linkedin if personData and personData.linkedin else None -%}
                {%- set speakerWebsite = personData.website if personData and personData.website else None -%}
                {%- set speakerSearchUrl = "https://www.linkedin.com/search/results/all/?keywords=" + (speaker.name | urlencode) -%}
                {%- set speakerProfileUrl = speakerLinkedin or speakerWebsite or speakerSearchUrl -%}
                <a href="{{ speakerProfileUrl }}" target="_blank" rel="noopener noreferrer">{{ speaker.name }}</a>{% if not loop.last %}, {% endif %}
              {%- endfor -%}
            {%- endif -%}
          </td>
        </tr>
        {% endfor %}
      </tbody>
    </table>
  </section>
  {% endif %}

  {# Call for Speakers (if open) #}
  {% if eventData.speakerRegistrationUrl %}
  <section class="event-cta">
    <h2>Call for Speakers</h2>
    <p>Want to share your ServiceNow knowledge? We're looking for speakers!</p>
    <a href="{{ eventData.speakerRegistrationUrl }}" class="btn btn-outline" target="_blank" rel="noopener noreferrer">
      Submit a Session
    </a>
  </section>
  {% endif %}

  {# Register CTA #}
  {% if eventData.registrationUrl %}
  <section class="event-cta">
    <h2>Join Us</h2>
    <p>Registration is free and takes less than a minute.</p>
    <a href="{{ eventData.registrationUrl }}" class="btn btn-lg btn-primary" target="_blank" rel="noopener noreferrer">
      Register Now
    </a>
  </section>
  {% endif %}
</article>

<style>
  .event-page {
    max-width: 900px;
    margin: 0 auto;
    padding: 2rem 1rem;
  }

  /* Hero */
  .event-hero {
    text-align: center;
    padding: 3rem 0;
    border-bottom: 1px solid hsl(var(--border));
  }

  .event-hero h1 {
    font-size: clamp(2rem, 5vw, 3rem);
    font-weight: 700;
    margin-bottom: 1rem;
  }

  .event-description {
    font-size: 1.25rem;
    color: hsl(var(--muted-foreground));
    margin-bottom: 2rem;
    max-width: 600px;
    margin-left: auto;
    margin-right: auto;
  }

  /* Event Details */
  .event-details {
    padding: 2rem 0;
    border-bottom: 1px solid hsl(var(--border));
  }

  .event-meta {
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    gap: 2rem;
    margin: 0;
  }

  .meta-item {
    text-align: center;
  }

  .meta-item dt {
    font-size: 0.75rem;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    color: hsl(var(--muted-foreground));
    margin-bottom: 0.25rem;
  }

  .meta-item dd {
    font-size: 1.125rem;
    font-weight: 600;
    margin: 0;
  }

  /* Schedule */
  .event-schedule {
    padding: 3rem 0;
  }

  .event-schedule h2 {
    text-align: center;
    margin-bottom: 0.5rem;
  }

  .schedule-note {
    text-align: center;
    font-size: 0.875rem;
    color: hsl(var(--muted-foreground));
    margin-bottom: 2rem;
  }

  .schedule-table {
    width: 100%;
    border-collapse: collapse;
  }

  .schedule-table th,
  .schedule-table td {
    padding: 0.75rem 1rem;
    text-align: left;
    border-bottom: 1px solid hsl(var(--border) / 0.5);
  }

  .schedule-table th {
    font-size: 0.75rem;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    color: hsl(var(--muted-foreground));
    font-weight: 600;
  }

  .schedule-time {
    white-space: nowrap;
    font-variant-numeric: tabular-nums;
    color: hsl(var(--primary));
    font-weight: 500;
  }

  .schedule-title {
    font-weight: 500;
  }

  .schedule-speaker {
    color: hsl(var(--muted-foreground));
  }

  .schedule-speaker a {
    color: hsl(var(--primary));
    text-decoration: none;
  }

  .schedule-speaker a:hover {
    text-decoration: underline;
  }

  @media (max-width: 600px) {
    .schedule-table th:nth-child(3),
    .schedule-table td:nth-child(3) {
      display: none;
    }
  }

  /* CTA Sections */
  .event-cta {
    text-align: center;
    padding: 3rem 0;
    border-top: 1px solid hsl(var(--border));
  }

  .event-cta h2 {
    margin-bottom: 0.5rem;
  }

  .event-cta p {
    color: hsl(var(--muted-foreground));
    margin-bottom: 1.5rem;
  }
</style>
