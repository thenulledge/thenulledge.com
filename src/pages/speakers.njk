    font-size: 24px;
    color: hsl(var(--primary));
    margin-top: 0.25rem;
  }

  .flex-between {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    gap: 1rem;
    margin-bottom: 0.5rem;
  }

  .checklist-item {
    display: flex;
    align-items: flex-start;
    gap: 1rem;
    padding: 1rem 0;
  }

  .checklist-item svg {
    flex-shrink: 0;
    color: hsl(var(--primary));
    margin-top: 0.25rem;
    font-size: 24px;
  }

  .checklist-item .font-semibold {
    font-weight: 600;
    margin-bottom: 0.25rem;
  }

  .info-item {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    color: hsl(var(--muted-foreground));
    font-size: var(--size-step--1);
  }

  .info-item svg, .info-item span.fa-solid, .info-item span.fa-regular {
    flex-shrink: 0;
    color: hsl(var(--primary));
    font-size: 32px;
  }

  .alert {
    padding: 1rem;
    border-radius: var(--radius);
    margin-top: 1.5rem;
    border: 2px solid hsl(var(--border));
  }

  .alert-warning {
    background: hsl(var(--muted) / 0.5);
    border-color: hsl(var(--primary) / 0.3);
  }

  .text-muted {
    color: hsl(var(--muted-foreground));
    font-size: var(--size-step--1);
  }

  .font-semibold {
    font-weight: 600;
  }

  .gap-l {
    gap: var(--space-l);
  }

  .gap-m {
    gap: var(--space-m);
  }

  .gap-s {
    gap: var(--space-s);
  }

  .cfp-placeholder {
    max-width: 800px;
    margin: 0 auto;
    text-align: center;
  }

  .cfp-placeholder-icon {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 5rem;
    height: 5rem;
    background: hsl(var(--primary) / 0.1);
    border-radius: 50%;
