    border-radius: calc(var(--radius) - 2px);
  }

  .cfp-timeline-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 0.5rem;
    flex-wrap: wrap;
    gap: 0.5rem;
  }

  .badge-sm {
    font-size: var(--size-step--2);
    padding: 0.125rem 0.5rem;
  }
</style>
