{#
Info Badges Partial - Display event metadata as horizontal badge row

Usage:
{% from "partials/info-badges.njk" import infoBadges %}
{{ infoBadges(items=[
  { icon: "<svg>...</svg>", label: "Date", value: "Oct 16, 2026" },
  { iconClass: "fa-solid fa-clock", label: "Time", value: "9:00 AM EDT" },
  { icon: "<svg>...</svg>", label: "Location", value: "Virtual" }
]) }}
#}

{% macro infoBadges(items=[]) %}
<section class="info-badges-section">
  <div class="info-badges-grid">
    {% for item in items %}
    <div class="info-badge">
      <div class="info-badge-icon">
        {% if item.iconClass %}
          <span class="{{ item.iconClass }}"></span>
        {% elif item.icon %}
          {{ item.icon | safe }}
        {% endif %}
      </div>
      <div class="info-badge-content">
        <div class="info-badge-label">{{ item.label }}</div>
        <div class="info-badge-value">{{ item.value }}</div>
      </div>
    </div>
    {% endfor %}
  </div>
</section>

<style>
  /* Info Badges Section Styles */
  .info-badges-section {
    padding: 2rem 1rem;
  }

  .info-badges-grid {
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    gap: 2rem;
    max-width: 1200px;
    margin: 0 auto;
  }

  .info-badge {
    display: flex;
    align-items: center;
    gap: 1rem;
    padding: 1rem 1.5rem;
    background: hsl(var(--muted) / 0.2);
    border-radius: var(--radius);
    min-width: 200px;
  }

  .info-badge-icon {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 2.5rem;
    height: 2.5rem;
    background: hsl(var(--primary) / 0.1);
    border-radius: calc(var(--radius) - 2px);
    color: hsl(var(--primary));
    flex-shrink: 0;
  }

  .info-badge-icon svg {
    width: 1.25rem;
    height: 1.25rem;
    stroke: currentColor;
  }

  .info-badge-icon .fa-solid,
  .info-badge-icon .fa-regular {
    font-size: 1.25rem;
  }

  .info-badge-content {
    display: flex;
    flex-direction: column;
    gap: 0.25rem;
  }

  .info-badge-label {
    font-size: var(--size-step--1);
    color: hsl(var(--muted-foreground));
    font-weight: 500;
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  .info-badge-value {
    font-size: var(--size-step-0);
    font-weight: 600;
    color: hsl(var(--foreground));
  }

  @media (max-width: 768px) {
    .info-badges-grid {
      flex-direction: column;
      align-items: stretch;
      gap: 1rem;
    }

    .info-badge {
      min-width: auto;
    }
  }
</style>
{% endmacro %}
