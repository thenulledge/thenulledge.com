<header class="site-header">
  <a href="#main" class="skip-link">{{ meta.skipContent }}</a>

  <div class="header-container">
    <a href="/" class="site-logo" {{ indicateActiveHome }}>
      <!-- Wide text logo for large screens -->
      <img 
        src="/assets/images/template/nullEDGElogo.png" 
        alt="nullEDGE logo" 
        class="logo-image logo-wide"
        width="512"
        height="85"
        loading="eager"
      >
      <!-- Square icon for medium/small screens -->
      <img 
        src="/assets/images/template/nullEDGEicon.png" 
        alt="nullEDGE logo" 
        class="logo-image logo-square"
        width="512"
        height="512"
        loading="eager"
      >
      <span class="site-name">{{ meta.siteName }}</span>
    </a>
    {% include "partials/main-nav.njk" %}
  </div>
</header>

<style>
  .site-header {
    padding: 1rem;
    border-bottom: 2px solid hsl(var(--border));
    background: hsl(0 0% 0%);
  }

  .header-container {
    max-width: 1200px;
    margin: 0 auto;
    display: flex;
    flex-wrap: wrap;
    justify-content: space-between;
    align-items: center;
    gap: 1rem;
    position: relative;
    z-index: 1;
  }

  .site-logo {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.5rem 0;
    font-size: var(--size-step-0);
    text-decoration: none;
    color: hsl(var(--foreground));
    font-weight: 600;
  }

   .logo-image {
     object-fit: contain;
   }

   .logo-wide {
     width: 8rem; /* Wider for text logo */
     height: 1.333rem; /* Maintain 6:1 aspect ratio (8/1.333 = 6) */
   }

   .logo-square {
     width: 2rem;
     height: 2rem;
   }

   /* Show wide logo on large screens, square on others */
   @media (min-width: 1024px) {
     .logo-wide {
       display: inline-block;
     }
     .logo-square {
       display: none;
     }
   }

   @media (max-width: 1023px) {
     .logo-wide {
       display: none;
     }
     .logo-square {
       display: inline-block;
     }
   }

  .site-logo:hover {
    color: hsl(var(--primary));
  }

  .site-name {
    font-family: var(--font-display);
  }

   /* Hide site name text - we show it in the logo instead */
   .site-name {
     display: none;
   }

  /* Skip link accessibility */
  .skip-link {
    clip: rect(1px, 1px, 1px, 1px);
    display: block;
    height: 1px;
    overflow: hidden;
    position: absolute;
    width: 1px;
    top: 1rem;
    left: 1rem;
    z-index: 999;
  }

  .skip-link:focus {
    clip: auto;
    height: auto;
    overflow: visible;
    width: auto;
    background-color: hsl(var(--primary));
    color: hsl(var(--primary-foreground));
    padding: 0.5rem 1rem;
    border-radius: calc(var(--radius) - 2px);
    line-height: 1;
  }

  .skip-link:not(:focus) {
    border: 0;
    clip: rect(0 0 0 0);
    height: auto;
    margin: 0;
    overflow: hidden;
    padding: 0;
    position: absolute;
    width: 1px;
    white-space: nowrap;
  }

  @media (max-width: 768px) {
    .site-header {
      padding: 0.75rem;
    }
  }
</style>
