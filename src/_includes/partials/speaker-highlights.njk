{#
Speaker Highlights Partial - Showcase featured speakers for sessions events

Usage:
{% from "partials/speaker-highlights.njk" import speakerHighlights %}
{{ speakerHighlights(
  title="Featured Speakers",
  subtitle="Learn from experienced ServiceNow folks",
  speakers=[
    {
      name: "John Doe",
      title: "Principal Architect",
      company: "Acme Corp",
      image: "/assets/images/speakers/john-doe.jpg",
      bio: "15+ years of ServiceNow experience..."
    }
  ],
  viewAllLink="/speakers"
) }}
#}

{% macro speakerHighlights(title="Featured Speakers", subtitle="", speakers=[], viewAllLink="") %}
{% if speakers and speakers.length > 0 %}
<section class="speaker-highlights-section">
  <div class="container">
    <h2 class="section-title">{{ title }}</h2>
    {% if subtitle %}
    <p class="section-subtitle">{{ subtitle }}</p>
    {% endif %}
    
    <div class="speakers-grid">
      {% for speaker in speakers %}
      <div class="speaker-card">
        {% if speaker.image %}
        <div class="speaker-image-wrapper">
          <img src="{{ speaker.image }}" alt="{{ speaker.name }}" class="speaker-image" />
        </div>
        {% else %}
        <div class="speaker-image-wrapper speaker-placeholder">
          <i class="fa-solid fa-user"></i>
        </div>
        {% endif %}
        <div class="speaker-info">
          <h3 class="speaker-name">{{ speaker.name }}</h3>
          {% if speaker.title %}
          <p class="speaker-title">{{ speaker.title }}</p>
          {% endif %}
          {% if speaker.company %}
          <p class="speaker-company">{{ speaker.company }}</p>
          {% endif %}
          {% if speaker.bio %}
          <p class="speaker-bio">{{ speaker.bio }}</p>
          {% endif %}
        </div>
      </div>
      {% endfor %}
    </div>

    {% if viewAllLink %}
    <div class="speaker-cta">
      <a href="{{ viewAllLink }}" class="btn btn-lg btn-outline">View All Speakers</a>
    </div>
    {% endif %}
  </div>
</section>

<style>
  /* Speaker Highlights Section Styles */
  .speaker-highlights-section {
    padding: 4rem 1rem;
    background: hsl(var(--muted) / 0.2);
  }

  .speaker-highlights-section .section-title {
    text-align: center;
    font-size: clamp(1.75rem, 4vw, 2.5rem);
    font-weight: 700;
    margin-bottom: 1rem;
  }

  .speaker-highlights-section .section-subtitle {
    text-align: center;
    font-size: clamp(1rem, 2vw, 1.125rem);
    color: hsl(var(--muted-foreground));
    max-width: 800px;
    margin: 0 auto 3rem;
  }

  .speakers-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(280px, 1fr));
    gap: 2rem;
    max-width: 1200px;
    margin: 0 auto 3rem;
  }

  .speaker-card {
    background: hsl(var(--card));
    border: 1px solid hsl(var(--border));
    border-radius: var(--radius);
    overflow: hidden;
    transition: all 0.2s ease;
  }

  .speaker-card:hover {
    transform: translateY(-4px);
    box-shadow: 0 8px 16px hsl(var(--foreground) / 0.1);
  }

  .speaker-image-wrapper {
    position: relative;
    width: 100%;
    padding-bottom: 100%; /* 1:1 aspect ratio */
    overflow: hidden;
    background: hsl(var(--muted) / 0.3);
  }

  .speaker-image {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .speaker-placeholder {
    display: flex;
    align-items: center;
    justify-content: center;
    background: hsl(var(--primary) / 0.1);
  }

  .speaker-placeholder i {
    font-size: 4rem;
    color: hsl(var(--primary) / 0.3);
  }

  .speaker-info {
    padding: 1.5rem;
  }

  .speaker-name {
    font-size: var(--size-step-1);
    font-weight: 700;
    margin-bottom: 0.5rem;
    color: hsl(var(--foreground));
  }

  .speaker-title {
    font-size: var(--size-step--1);
    font-weight: 600;
    color: hsl(var(--primary));
    margin-bottom: 0.25rem;
  }

  .speaker-company {
    font-size: var(--size-step--1);
    color: hsl(var(--muted-foreground));
    margin-bottom: 1rem;
  }

  .speaker-bio {
    font-size: var(--size-step--1);
    color: hsl(var(--muted-foreground));
    line-height: 1.6;
    margin: 0;
  }

  .speaker-cta {
    text-align: center;
  }

  @media (max-width: 768px) {
    .speaker-highlights-section {
      padding: 3rem 1rem;
    }

    .speakers-grid {
      grid-template-columns: repeat(auto-fill, minmax(200px, 1fr));
      gap: 1.5rem;
    }

    .speaker-info {
      padding: 1rem;
    }
  }
</style>
{% endif %}
{% endmacro %}
