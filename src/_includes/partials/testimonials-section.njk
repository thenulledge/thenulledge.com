{# Testimonials Section - Use with {% include %} 
Set these variables before including:
- testimonialsTitle
- testimonialsSubtitle
#}
<section class="testimonials-section">
  <div class="container">
    <h2 class="section-title">{{ testimonialsTitle }}</h2>
    {% if testimonialsSubtitle %}
    <p class="section-subtitle">{{ testimonialsSubtitle | safe }}</p>
    {% endif %}
    
    <div class="testimonials-masonry">
      {% for testimonial in testimonials %}
        {# Determine platform from link #}
        {% set platform = "none" %}
        {% set hasLink = testimonial.link and testimonial.link != "" %}
        {% set finalLink = "" %}
        
        {% if hasLink %}
          {% if "thenulledge.com" in testimonial.link %}
            {% set platform = "nulledge" %}
            {% set finalLink = testimonial.link + ":~:text=" + (testimonial.quote | urlEncode) %}
          {% elif "linkedin.com" in testimonial.link %}
            {% set platform = "linkedin" %}
            {% set finalLink = testimonial.link %}
          {% elif "twitter.com" in testimonial.link or "x.com" in testimonial.link %}
            {% set platform = "twitter" %}
            {% set finalLink = testimonial.link %}
          {% elif "discord.com" in testimonial.link or "discord.gg" in testimonial.link %}
            {% set platform = "discord" %}
            {% set finalLink = testimonial.link %}
          {% elif "slack.com" in testimonial.link %}
            {% set platform = "slack" %}
            {% set finalLink = testimonial.link %}
          {% else %}
            {% set platform = "generic" %}
            {% set finalLink = testimonial.link %}
          {% endif %}
        {% endif %}
        
        {# All platforms use custom styled cards #}
        
        {# Conditional wrapper - <a> if has link, <div> if not #}
        {% if hasLink %}
        <a href="{{ finalLink }}" 
           class="testimonial-card testimonial-{{ platform }}"
           {% if platform != "nulledge" %}target="_blank" rel="noopener noreferrer"{% endif %}>
        {% else %}
        <div class="testimonial-card testimonial-none">
        {% endif %}
        
          <div class="testimonial-header">
            {# Avatar image - only show if person exists in people.js #}
            {% if people[testimonial.name] and people[testimonial.name].image %}
              <div class="testimonial-avatar">
                <img src="{{ people[testimonial.name].image }}" alt="{{ testimonial.name }}" class="testimonial-avatar-img">
              </div>
            {% endif %}
            
            {# Name and optional role #}
            <div class="testimonial-meta">
              <div class="testimonial-name">
                {{ testimonial.name }}
                {# Platform icon - inline with name #}
                {% if platform != "none" %}
                  <span class="testimonial-platform-icon">
                    {% if platform == "nulledge" %}
                      <img src="/assets/images/template/nullEDGEicon.png" alt="nullEDGE" class="platform-logo" />
                    {% elif platform == "linkedin" %}
                      <i class="fa-brands fa-linkedin"></i>
                    {% elif platform == "twitter" %}
                      <i class="fa-brands fa-x-twitter"></i>
                    {% elif platform == "discord" %}
                      <i class="fa-brands fa-discord"></i>
                    {% elif platform == "slack" %}
                      <i class="fa-brands fa-slack"></i>
                    {% else %}
                      <i class="fa-solid fa-quote-left"></i>
                    {% endif %}
                  </span>
                {% endif %}
              </div>
              {% if testimonial.role %}
                <div class="testimonial-role">{{ testimonial.role }}</div>
              {% endif %}
            </div>
          </div>
          
          {# Quote #}
          <blockquote class="testimonial-quote">
            {{ testimonial.quote | nlToBr | safe }}
          </blockquote>
        
        {# Close conditional wrapper #}
        {% if hasLink %}
        </a>
        {% else %}
        </div>
        {% endif %}
      {% endfor %}
    </div>
  </div>
</section>

<style>
  .testimonials-section {
    padding: 5rem 1rem;
    background: hsl(var(--background));
  }

  .section-title {
    text-align: center;
    font-size: clamp(2rem, 4vw, 3rem);
    font-weight: 700;
    margin-bottom: 1rem;
  }

  .section-subtitle {
    text-align: center;
    font-size: clamp(1rem, 2vw, 1.25rem);
    color: hsl(var(--muted-foreground));
    max-width: 800px;
    margin: 0 auto 3rem;
  }

  .section-subtitle a {
    color: hsl(var(--primary));
    text-decoration: none;
    transition: opacity 0.2s;
  }

  .section-subtitle a:hover {
    opacity: 0.8;
    text-decoration: underline;
  }

  /* Masonry layout using CSS columns */
  .testimonials-masonry {
    column-count: 1;
    column-gap: 0;
    margin-top: 2rem;
  }

  .testimonial-card {
    display: block;
    break-inside: avoid;
    margin-bottom: 1rem;
    padding: 1rem;
    background: hsl(var(--card));
    border: 2px solid hsl(var(--border));
    border-radius: 8px;
    text-decoration: none;
    color: inherit;
    position: relative;
  }

  /* Only apply hover/transition effects if it's a link */
  a.testimonial-card {
    transition: all 0.3s ease;
    cursor: pointer;
  }

  a.testimonial-card:hover {
    transform: translateY(-2px);
  }

  /* Non-link cards - no hover effects */
  div.testimonial-card {
    cursor: default;
  }

  .testimonial-header {
    display: flex;
    align-items: center;
    gap: 0 0.75rem;
    position: relative;
  }

  .testimonial-initials {
    width: 48px;
    height: 48px;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 1.1rem;
    font-weight: 700;
    flex-shrink: 0;
    background: linear-gradient(135deg, hsl(var(--primary) / 0.3), hsl(var(--primary) / 0.5));
    color: hsl(var(--primary));
    border: 2px solid hsl(var(--primary) / 0.3);
  }

  .testimonial-avatar {
    width: 48px;
    height: 48px;
    border-radius: 50%;
    flex-shrink: 0;
    overflow: hidden;
    background: hsl(var(--muted));
  }

  .testimonial-avatar-img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .testimonial-meta {
    flex: 1;
    min-width: 0;
  }

  .testimonial-name {
    font-size: 0.95rem;
    font-weight: 700;
    color: hsl(var(--foreground));
    line-height: 1.3;
    display: flex;
    align-items: center;
    gap: 0.5rem;
  }

  .testimonial-role {
    font-size: 0.8rem;
    color: hsl(var(--muted-foreground));
    line-height: 1.3;
    margin-top: 0.25rem;
  }

  .testimonial-quote {
    font-size: 0.9rem;
    color: hsl(var(--foreground));
    line-height: 1.5;
    margin: 0;
    padding: 0;
    border: none;
    white-space: pre-line;
    word-wrap: break-word;
  }

  /* Platform icon - inline with name */
  .testimonial-platform-icon {
    display: inline-flex;
    align-items: center;
    font-size: 1rem;
    opacity: 0.5;
    transition: opacity 0.2s;
  }

  a.testimonial-card:hover .testimonial-platform-icon {
    opacity: 0.8;
  }

  .testimonial-platform-icon .platform-logo {
    width: 18px;
    height: 18px;
    object-fit: contain;
  }

  /* nullEDGE - Primary brand color */
  .testimonial-nulledge {
    border-left: 4px solid hsl(var(--primary));
  }

  a.testimonial-nulledge:hover {
    border-color: hsl(var(--primary));
    box-shadow: 0 8px 24px hsl(var(--primary) / 0.15);
  }

  .testimonial-nulledge .testimonial-platform-icon {
    opacity: 0.5;
  }

  /* LinkedIn - Professional Blue */
  .testimonial-linkedin {
    border-left: 4px solid #0A66C2;
  }

  a.testimonial-linkedin:hover {
    border-color: #0A66C2;
    box-shadow: 0 8px 24px rgba(10, 102, 194, 0.15);
  }

  .testimonial-linkedin .testimonial-platform-icon {
    color: #0A66C2;
  }

  /* Twitter/X - Sky Blue */
  .testimonial-twitter {
    border-left: 4px solid #1DA1F2;
  }

  a.testimonial-twitter:hover {
    border-color: #1DA1F2;
    box-shadow: 0 8px 24px rgba(29, 161, 242, 0.15);
  }

  .testimonial-twitter .testimonial-platform-icon {
    color: #1DA1F2;
  }

  /* Discord - Blurple */
  .testimonial-discord {
    border-left: 4px solid #5865F2;
  }

  a.testimonial-discord:hover {
    border-color: #5865F2;
    box-shadow: 0 8px 24px rgba(88, 101, 242, 0.15);
  }

  .testimonial-discord .testimonial-platform-icon {
    color: #5865F2;
  }

  /* Slack - Aubergine */
  .testimonial-slack {
    border-left: 4px solid #4A154B;
  }

  a.testimonial-slack:hover {
    border-color: #4A154B;
    box-shadow: 0 8px 24px rgba(74, 21, 75, 0.15);
  }

  .testimonial-slack .testimonial-platform-icon {
    color: #4A154B;
  }

  /* Generic with link */
  .testimonial-generic {
    border-left: 4px solid hsl(var(--primary));
  }

  a.testimonial-generic:hover {
    border-color: hsl(var(--primary));
    box-shadow: 0 8px 24px hsl(var(--primary) / 0.15);
  }

  .testimonial-generic .testimonial-platform-icon {
    color: hsl(var(--primary));
  }

  /* No link - static, not clickable */
  .testimonial-none {
    border-left: 4px solid hsl(var(--border));
  }

  /* No hover effects for none */
  div.testimonial-none:hover {
    border-color: hsl(var(--border));
    box-shadow: none;
    transform: none;
  }

  /* Responsive column counts */
  @media (min-width: 640px) {
    .testimonials-masonry {
      column-count: 2;
      column-gap: 2rem;
    }
  }

  @media (min-width: 1024px) {
    .testimonials-masonry {
      column-count: 3;
      column-gap: 2rem;
    }

    .testimonial-card {
      padding: 2rem;
    }
  }

  @media (max-width: 639px) {
    .testimonials-section {
      padding: 3rem 1rem;
    }
  }
</style>
