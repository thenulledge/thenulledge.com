{# FAQ Section - Reusable partial for slice pages #}
{# Usage: {% include "partials/slice/faq.njk" %} with region variable set #}

<section class="region flow">
  <h2 class="text-center">Frequently Asked Questions</h2>
  <div class="flow gap-m">
    {# Common FAQs first #}
    {% for faq in sliceFaq.common %}
    <div class="card flow">
      <h3 class="h4">{{ faq.question }}</h3>
      <p>{{ faq.answer | safe }}</p>
    </div>
    {% endfor %}
    
    {# Region-specific FAQs #}
    {% for faq in sliceFaq[region] %}
    <div class="card flow">
      <h3 class="h4">{{ faq.question }}</h3>
      <p>{{ faq.answer | safe }}</p>
    </div>
    {% endfor %}
  </div>
</section>
