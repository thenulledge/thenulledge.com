{# Sponsor Carousel Component
Usage:
{% from "partials/sponsor-carousel.njk" import sponsorCarousel %}
{{ sponsorCarousel(
  sponsors=events['2025'].nullEDGE.expoBooths
) }}
#}

{% macro sponsorCarousel(sponsors=[]) %}
<section class="sponsor-carousel-section">
  <div class="container">
    <div class="carousel-wrapper">
      <div class="carousel-track">
        {# First set of sponsors #}
        {% for sponsor in sponsors %}
        <div class="carousel-item">
          <img 
            src="/assets/images{{ sponsor.logo }}" 
            alt="{{ sponsor.name }}" 
            class="sponsor-logo"
            loading="lazy"
          />
        </div>
        {% endfor %}
        
        {# Duplicate set for seamless loop #}
        {% for sponsor in sponsors %}
        <div class="carousel-item">
          <img 
            src="/assets/images{{ sponsor.logo }}" 
            alt="{{ sponsor.name }}" 
            class="sponsor-logo"
            loading="lazy"
          />
        </div>
        {% endfor %}
      </div>
    </div>
  </div>
</section>

<style>
  .sponsor-carousel-section {
    padding: 3rem 1rem;
    overflow: hidden;
    background: hsl(var(--muted) / 0.3);
  }

  .carousel-wrapper {
    position: relative;
    overflow: hidden;
    mask-image: linear-gradient(
      to right,
      transparent,
      black 10%,
      black 90%,
      transparent
    );
    -webkit-mask-image: linear-gradient(
      to right,
      transparent,
      black 10%,
      black 90%,
      transparent
    );
  }

  .carousel-track {
    display: flex;
    gap: 4rem;
    animation: scroll 40s linear infinite;
    width: fit-content;
  }

  .carousel-track:hover {
    animation-play-state: paused;
  }

  /* Respect reduced motion preference */
  @media (prefers-reduced-motion: reduce) {
    .carousel-track {
      animation: none;
      flex-wrap: wrap;
      justify-content: center;
      gap: 2rem;
    }
  }

  @keyframes scroll {
    0% {
      transform: translateX(0);
    }
    100% {
      transform: translateX(-50%);
    }
  }

  .carousel-item {
    flex-shrink: 0;
    width: 200px;
    height: 100px;
    display: flex;
    align-items: center;
    justify-content: center;
    filter: grayscale(100%);
    opacity: 0.7;
    transition: filter 0.3s ease, opacity 0.3s ease;
  }

  .carousel-item:hover {
    filter: grayscale(0%);
    opacity: 1;
  }

  .sponsor-logo {
    max-width: 100%;
    max-height: 100%;
    object-fit: contain;
  }

  @media (max-width: 768px) {
    .sponsor-carousel-section {
      padding: 2rem 1rem;
    }

    .carousel-item {
      width: 150px;
      height: 75px;
    }

    .carousel-track {
      gap: 2rem;
      animation-duration: 30s;
    }
  }
</style>
{% endmacro %}
