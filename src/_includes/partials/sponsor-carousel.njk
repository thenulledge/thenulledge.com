{# Sponsor Carousel Component
Usage:
{% from "partials/sponsor-carousel.njk" import sponsorCarousel %}
{{ sponsorCarousel(
  sponsors=events['2025'].nullEDGE.sponsors,
  companies=companies
) }}
#}

{% macro sponsorCarousel(sponsors=[], companies={}) %}
<section class="sponsor-carousel-section">
  <div class="container">
    <div class="carousel-wrapper">
      <div class="carousel-track">
        {# First set of sponsors #}
        {% for sponsorName in sponsors %}
        <div class="carousel-item">
          <a href="{{ companies[sponsorName].website }}" target="_blank" rel="noopener noreferrer" class="sponsor-link">
            <div class="sponsor-logo-wrapper">
              <img 
                src="{{ companies[sponsorName].image }}" 
                alt="{{ sponsorName }}" 
                class="sponsor-logo"
                loading="lazy"
                eleventy:ignore
              />
            </div>
            <span class="sponsor-name">{{ sponsorName }}</span>
          </a>
        </div>
        {% endfor %}
        
        {# Duplicate set for seamless loop #}
        {% for sponsorName in sponsors %}
        <div class="carousel-item">
          <a href="{{ companies[sponsorName].website }}" target="_blank" rel="noopener noreferrer" class="sponsor-link">
            <div class="sponsor-logo-wrapper">
              <img 
                src="{{ companies[sponsorName].image }}" 
                alt="{{ sponsorName }}" 
                class="sponsor-logo"
                loading="lazy"
                eleventy:ignore
              />
            </div>
            <span class="sponsor-name">{{ sponsorName }}</span>
          </a>
        </div>
        {% endfor %}
      </div>
    </div>
  </div>
</section>

<style>
  .sponsor-carousel-section {
    padding: 3rem 1rem;
    overflow: hidden;
    background: hsl(var(--muted) / 0.3);
  }

  .carousel-wrapper {
    position: relative;
    overflow: hidden;
    mask-image: linear-gradient(
      to right,
      transparent,
      black 10%,
      black 90%,
      transparent
    );
    -webkit-mask-image: linear-gradient(
      to right,
      transparent,
      black 10%,
      black 90%,
      transparent
    );
  }

  .carousel-track {
    display: flex;
    gap: 4rem;
    animation: scroll 40s linear infinite;
    width: fit-content;
  }

  .carousel-track:hover {
    animation-play-state: paused;
  }

  /* Respect reduced motion preference */
  @media (prefers-reduced-motion: reduce) {
    .carousel-track {
      animation: none;
      flex-wrap: wrap;
      justify-content: center;
      gap: 2rem;
    }
  }

  @keyframes scroll {
    0% {
      transform: translateX(0);
    }
    100% {
      transform: translateX(-50%);
    }
  }

  .carousel-item {
    flex-shrink: 0;
    width: 220px;
    display: flex;
    align-items: center;
    justify-content: center;
    filter: grayscale(100%);
    opacity: 0.7;
    transition: filter 0.3s ease, opacity 0.3s ease;
  }

  .carousel-item:hover {
    filter: grayscale(0%);
    opacity: 1;
  }

  .sponsor-link {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 0.5rem;
    text-decoration: none;
    color: inherit;
    width: 100%;
  }

  .sponsor-logo-wrapper {
    height: 120px;
    width: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .sponsor-logo {
    max-width: 100%;
    max-height: 100%;
    width: auto;
    height: auto;
    object-fit: contain;
  }

  .sponsor-name {
    font-size: 0.75rem;
    text-align: center;
    color: hsl(var(--muted-foreground));
    line-height: 1.2;
    transition: color 0.3s ease;
  }

  .carousel-item:hover .sponsor-name {
    color: hsl(var(--foreground));
  }

  @media (max-width: 768px) {
    .sponsor-carousel-section {
      padding: 2rem 1rem;
    }

    .carousel-item {
      width: 180px;
    }

    .sponsor-logo-wrapper {
      height: 100px;
    }

    .sponsor-name {
      font-size: 0.7rem;
    }

  .carousel-item:hover {
    filter: grayscale(0%);
    opacity: 1;
  }

  .sponsor-logo {
    max-width: 100%;
    max-height: 100%;
    width: auto;
    height: auto;
    object-fit: contain;
  }

  @media (max-width: 768px) {
    .sponsor-carousel-section {
      padding: 2rem 1rem;
    }

    .carousel-item {
      width: 180px;
      height: 120px;
    }

    .carousel-track {
      gap: 2rem;
      animation-duration: 30s;
    }
  }
</style>
{% endmacro %}
