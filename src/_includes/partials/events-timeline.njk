{# Events Timeline Section Macro
Usage:
{% from "partials/events-timeline.njk" import eventsTimeline %}
{{ eventsTimeline(
  title="2026 Event Series",
  subtitle="Four events throughout 2026, connecting ServiceNow folks around the globe.",
  year="2026",
  eventsData=events['2026']
) }}
#}

{% macro eventsTimeline(title, subtitle="", year="", eventsData={}, sectionId="events") %}
<section class="events-section" id="{{ sectionId }}">
  <div class="container">
    <h2 class="section-title">{{ title }}</h2>
    {% if subtitle %}
    <p class="section-subtitle">{{ subtitle }}</p>
    {% endif %}
    
    <div class="events-grid">
      {% set eventsSorted = eventsData | eventsToArray %}
      {% for event in eventsSorted %}
      <a href="{{ event.url }}" class="event-card {% if event.type == 'full-day' %}event-card-featured{% endif %}">
        <h3 class="event-name">{{ event.name }}</h3>
        <div class="event-meta">
          <div class="event-date">
            <i class="fa-solid fa-calendar" style="font-size: 16px;"></i>
            <span title="London: {{ event.niceDatesTimes.london }} | India: {{ event.niceDatesTimes.india }} | Sydney: {{ event.niceDatesTimes.sydney }}">{{ event.when.start | formatDateShort(event.timezone) | safe }}</span>
          </div>
          <div class="event-format">
            {% if event.type == 'networking' %}
              <span class="format-badge format-networking">Networking Event</span>
            {% endif %}
            {% if event.type == 'sessions' %}
              <span class="format-badge format-sessions">{{ event.sessionCount }} Sessions</span>
            {% endif %}
            {% if event.type == 'full-day' %}
              <span class="format-badge format-conference">Full Day Conference</span>
            {% endif %}
          </div>
        </div>
        <p class="event-description">{{ event.description }}</p>
      </a>
      {% endfor %}
    </div>
  </div>
</section>

<style>
  /* Events Section Styles */
  .events-section {
    padding: 5rem 1rem;
  }

  .section-title {
    text-align: center;
    font-size: clamp(2rem, 4vw, 3rem);
    font-weight: 700;
    margin-bottom: 1rem;
  }

  .section-subtitle {
    text-align: center;
    font-size: clamp(1rem, 2vw, 1.25rem);
    color: hsl(var(--muted-foreground));
    max-width: 800px;
    margin: 0 auto 3rem;
  }

  /* Events Grid */
  .events-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 2rem;
    max-width: 1200px;
    margin: 0 auto;
  }

  .event-card {
    position: relative;
    padding: 2rem;
    background: hsl(var(--card));
    border: 2px solid hsl(var(--border));
    border-radius: var(--radius);
    text-decoration: none;
    color: inherit;
    transition: all 0.2s;
    display: flex;
    flex-direction: column;
  }

  .event-card:hover {
    border-color: hsl(var(--primary));
    box-shadow: 0 8px 16px hsl(var(--primary) / 0.1);
  }

  .event-card-featured {
    grid-column: 1 / -1;
  }

  .event-name {
    font-size: var(--size-step-1);
    font-weight: 700;
    margin-bottom: 0.75rem;
  }

  .event-meta {
    display: flex;
    flex-direction: column;
    gap: 0.75rem;
    margin-bottom: 1rem;
    font-size: var(--size-step--1);
  }

  .event-date {
    display: flex;
    align-items: center;
    gap: 0.5rem;
  }

  .event-date .no-break {
    white-space: nowrap;
  }

  .event-format {
    display: flex;
    align-items: center;
  }

  .format-badge {
    display: inline-flex;
    padding: 0.25rem 0.75rem;
    border-radius: calc(var(--radius) - 2px);
    font-size: var(--size-step--2);
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.025em;
  }

  .format-networking {
    background: hsl(var(--primary) / 0.1);
    color: hsl(var(--primary));
  }

  .format-sessions {
    background: hsl(var(--accent) / 0.5);
    color: hsl(var(--accent-foreground));
  }

  .format-conference {
    background: hsl(var(--primary));
    color: hsl(var(--primary-foreground));
  }

  .event-description {
    color: hsl(var(--muted-foreground));
    line-height: 1.6;
  }

  /* Mobile Responsive */
  @media (max-width: 768px) {
    .events-section {
      padding: 3rem 1rem;
    }

    .events-grid {
      grid-template-columns: 1fr;
    }
  }
</style>
{% endmacro %}
