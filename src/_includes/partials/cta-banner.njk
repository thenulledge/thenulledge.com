{#
CTA Banner Partial - Call-to-action banner section

Usage:
{% from "partials/cta-banner.njk" import ctaBanner %}
{{ ctaBanner(
  title="Call for Speakers",
  description="We're looking for speakers to share their ServiceNow knowledge...",
  primaryButtonText="Submit a Session Proposal",
  primaryButtonLink="https://...",
  secondaryButtonText="View Guidelines",
  secondaryButtonLink="/guidelines",
  variant="default",
  metaText="Submissions close: August 31, 2026"
) }}
#}

{% macro ctaBanner(
  title="",
  description="",
  primaryButtonText="",
  primaryButtonLink="",
  secondaryButtonText="",
  secondaryButtonLink="",
  variant="default",
  metaText=""
) %}
<section class="cta-banner-section cta-banner-{{ variant }}">
  <div class="container">
    <div class="cta-banner-content">
      {% if title %}
      <h2 class="cta-title">{{ title }}</h2>
      {% endif %}
      
      {% if description %}
      <p class="cta-description">{{ description }}</p>
      {% endif %}

      {% if metaText %}
      <p class="cta-meta">{{ metaText }}</p>
      {% endif %}

      <div class="cta-buttons">
        {% if primaryButtonText and primaryButtonLink %}
        <a href="{{ primaryButtonLink }}" class="btn btn-lg btn-primary" 
           {% if primaryButtonLink.startsWith('http') %}target="_blank" rel="noopener noreferrer"{% endif %}>
          {{ primaryButtonText }}
        </a>
        {% endif %}
        
        {% if secondaryButtonText and secondaryButtonLink %}
        <a href="{{ secondaryButtonLink }}" class="btn btn-lg btn-outline"
           {% if secondaryButtonLink.startsWith('http') %}target="_blank" rel="noopener noreferrer"{% endif %}>
          {{ secondaryButtonText }}
        </a>
        {% endif %}
      </div>
    </div>
  </div>
</section>

<style>
  /* CTA Banner Section Styles */
  .cta-banner-section {
    padding: 4rem 1rem;
  }

  .cta-banner-default {
    background: hsl(var(--muted) / 0.3);
  }

  .cta-banner-primary {
    background: linear-gradient(135deg, 
      hsl(var(--primary) / 0.1),
      hsl(var(--muted) / 0.3),
      hsl(var(--secondary) / 0.1)
    );
  }

  .cta-banner-muted {
    background: hsl(var(--muted) / 0.2);
  }

  .cta-banner-content {
    max-width: 800px;
    margin: 0 auto;
    text-align: center;
  }

  .cta-title {
    font-size: clamp(1.75rem, 4vw, 2.5rem);
    font-weight: 700;
    margin-bottom: 1rem;
  }

  .cta-description {
    font-size: clamp(1rem, 2vw, 1.125rem);
    color: hsl(var(--muted-foreground));
    line-height: 1.6;
    margin-bottom: 1.5rem;
  }

  .cta-meta {
    font-size: var(--size-step--1);
    color: hsl(var(--muted-foreground));
    margin-bottom: 1.5rem;
    font-style: italic;
  }

  .cta-buttons {
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    gap: 1rem;
    margin-top: 2rem;
  }

  @media (max-width: 768px) {
    .cta-banner-section {
      padding: 3rem 1rem;
    }

    .cta-buttons {
      flex-direction: column;
      align-items: stretch;
    }

    .cta-buttons .btn {
      width: 100%;
      text-align: center;
    }
  }
</style>
{% endmacro %}
