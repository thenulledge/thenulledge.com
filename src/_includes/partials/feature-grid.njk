{#
Feature Grid Partial - Generic feature grid with icons, titles, descriptions

Usage:
{% from "partials/feature-grid.njk" import featureGrid %}
{{ featureGrid(
  title="Event Format",
  subtitle="Optional subtitle here",
  columns=4,
  items=[
    {
      iconClass: "fa-solid fa-users",
      title: "Pure Networking",
      description: "This is a networking-focused event..."
    },
    {
      icon: "<svg>...</svg>",
      title: "Global Reach",
      description: "Scheduled at a convenient time..."
    }
  ]
) }}
#}

{% macro featureGrid(title="", subtitle="", columns=3, items=[]) %}
<section class="feature-grid-section">
  <div class="container">
    {% if title %}
    <h2 class="section-title">{{ title }}</h2>
    {% endif %}
    {% if subtitle %}
    <p class="section-subtitle">{{ subtitle }}</p>
    {% endif %}
    
    <div class="feature-grid feature-grid-{{ columns }}col">
      {% for item in items %}
      <div class="card feature-card">
        <div class="card-icon">
          {% if item.iconClass %}
            <span class="{{ item.iconClass }}"></span>
          {% elif item.icon %}
            {{ item.icon | safe }}
          {% endif %}
        </div>
        <h3 class="feature-title">{{ item.title }}</h3>
        <p class="feature-description">{{ item.description }}</p>
      </div>
      {% endfor %}
    </div>
  </div>
</section>

<style>
  /* Feature Grid Section Styles */
  .feature-grid-section {
    padding: 4rem 1rem;
  }

  .feature-grid-section .section-title {
    text-align: center;
    font-size: clamp(1.75rem, 4vw, 2.5rem);
    font-weight: 700;
    margin-bottom: 1rem;
  }

  .feature-grid-section .section-subtitle {
    text-align: center;
    font-size: clamp(1rem, 2vw, 1.125rem);
    color: hsl(var(--muted-foreground));
    max-width: 800px;
    margin: 0 auto 3rem;
  }

  .feature-grid {
    display: grid;
    gap: 2rem;
    max-width: 1400px;
    margin: 0 auto;
  }

  .feature-grid-2col {
    grid-template-columns: repeat(2, 1fr);
  }

  .feature-grid-3col {
    grid-template-columns: repeat(3, 1fr);
  }

  .feature-grid-4col {
    grid-template-columns: repeat(4, 1fr);
  }

  .feature-card {
    background: hsl(var(--card));
    border: 1px solid hsl(var(--border));
    border-radius: var(--radius);
    padding: var(--space-m-l);
    text-align: center;
    transition: all 0.2s ease;
  }

  .feature-card:hover {
    transform: translateY(-2px);
    box-shadow: 0 8px 16px hsl(var(--foreground) / 0.1);
  }

  .feature-card .card-icon {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 4rem;
    height: 4rem;
    margin: 0 auto 1.5rem;
    background: hsl(var(--primary) / 0.1);
    border-radius: calc(var(--radius) - 2px);
    color: hsl(var(--primary));
  }

  .feature-card .card-icon svg {
    width: 1.5rem;
    height: 1.5rem;
    stroke: currentColor;
  }

  .feature-card .card-icon .fa-solid,
  .feature-card .card-icon .fa-regular {
    font-size: 2rem;
  }

  .feature-title {
    font-size: var(--size-step-1);
    font-weight: 600;
    margin-bottom: 1rem;
  }

  .feature-description {
    color: hsl(var(--muted-foreground));
    line-height: 1.6;
    margin: 0;
  }

  /* Responsive breakpoints */
  @media (max-width: 1024px) {
    .feature-grid-4col {
      grid-template-columns: repeat(2, 1fr);
    }

    .feature-grid-3col {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  @media (max-width: 768px) {
    .feature-grid-section {
      padding: 3rem 1rem;
    }

    .feature-grid-2col,
    .feature-grid-3col,
    .feature-grid-4col {
      grid-template-columns: 1fr;
    }
  }
</style>
{% endmacro %}
