{#
Timezone Display Partial - Show event time across multiple timezones

Usage:
{% from "partials/timezone-display.njk" import timezoneDisplay %}
{{ timezoneDisplay(
  title="Join us from anywhere in the world",
  timezones={
    atlanta: "5:00 PM EST",
    london: "10:00 PM GMT",
    india: "3:30 AM IST (next day)",
    sydney: "9:00 AM AEDT (next day)"
  }
) }}
#}

{% macro timezoneDisplay(title="", timezones={}) %}
<section class="timezone-display-section">
  <div class="container">
    {% if title %}
    <h2 class="section-title">{{ title }}</h2>
    {% endif %}
    
    <div class="timezone-grid">
      {% for city, time in timezones %}
      <div class="timezone-card">
        <div class="timezone-icon">
          <i class="fa-solid fa-clock"></i>
        </div>
        <div class="timezone-city">{{ city | capitalize }}</div>
        <div class="timezone-time">{{ time }}</div>
      </div>
      {% endfor %}
    </div>
  </div>
</section>

<style>
  /* Timezone Display Section Styles */
  .timezone-display-section {
    padding: 4rem 1rem;
    background: hsl(var(--muted) / 0.2);
  }

  .timezone-display-section .section-title {
    text-align: center;
    font-size: clamp(1.75rem, 4vw, 2.5rem);
    font-weight: 700;
    margin-bottom: 3rem;
  }

  .timezone-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    gap: 1.5rem;
    max-width: 1200px;
    margin: 0 auto;
  }

  .timezone-card {
    background: hsl(var(--card));
    border: 1px solid hsl(var(--border));
    border-radius: var(--radius);
    padding: 1.5rem;
    text-align: center;
    transition: all 0.2s ease;
  }

  .timezone-card:hover {
    transform: translateY(-2px);
    box-shadow: 0 8px 16px hsl(var(--foreground) / 0.1);
  }

  .timezone-icon {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    width: 3rem;
    height: 3rem;
    background: hsl(var(--primary) / 0.1);
    border-radius: 50%;
    color: hsl(var(--primary));
    margin-bottom: 1rem;
    font-size: 1.5rem;
  }

  .timezone-city {
    font-size: var(--size-step-0);
    font-weight: 600;
    color: hsl(var(--foreground));
    margin-bottom: 0.5rem;
    text-transform: capitalize;
  }

  .timezone-time {
    font-size: var(--size-step-1);
    font-weight: 700;
    color: hsl(var(--primary));
  }

  @media (max-width: 768px) {
    .timezone-display-section {
      padding: 3rem 1rem;
    }

    .timezone-grid {
      grid-template-columns: repeat(auto-fit, minmax(150px, 1fr));
    }
  }
</style>
{% endmacro %}
