---
layout: base
---

<div class="container wrapper flow">
  {# Hero Section #}
  <div class="prose text-center">
    <span class="badge">{{ eventBadge if eventBadge else (event.when.start | formatDate('MMMM D, YYYY') ~ ' • ' ~ event.when.start | formatDate('h:mm A z')) }}</span>
    <h1>{{ title }}</h1>
    <p class="lead">{{ description }}</p>

    {# Quick Info #}
    <div class="grid-2col" style="margin: 2rem 0;">
      <div class="info-item">
        <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><rect width="18" height="18" x="3" y="4" rx="2" ry="2"/><line x1="16" x2="16" y1="2" y2="6"/><line x1="8" x2="8" y1="2" y2="6"/><line x1="3" x2="21" y1="10" y2="10"/></svg>
        <span>{{ eventDate if eventDate else (event.when.start | formatDate('MMMM D, YYYY')) }}</span>
      </div>
      <div class="info-item">
        <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M20 10c0 6-8 12-8 12s-8-6-8-12a8 8 0 0 1 16 0Z"/><circle cx="12" cy="10" r="3"/></svg>
        <span>Virtual Event</span>
      </div>
    </div>

    {# CTA #}
    <div class="button-group" style="margin: 2rem 0;">
      <a href="{{ event.registrationUrl }}" class="btn btn-lg btn-primary" target="_blank" rel="noopener noreferrer">Register Free</a>
      <a href="/sponsors" class="btn btn-lg btn-outline">Become a Sponsor</a>
    </div>

    {% if cfpMessage %}
    <p class="text-muted">{{ cfpMessage if cfpMessage else ('Call for Papers opens ' ~ (event.speakerSubmissionStart | formatDate('MMMM D, YYYY'))) }}</p>
    {% elif event.speakerSubmissionStart %}
    <p class="text-muted">Call for Papers opens {{ event.speakerSubmissionStart | formatDate('MMMM D, YYYY') }}</p>
    {% endif %}
  </div>

  {# What are these Events #}
  <section class="region flow">
    <div class="card flow text-center prose">
      <h2>Virtual Events for ServiceNow Folks</h2>
      <p>
        These focused events complement the main nullEDGE conference by bringing folks 
        together in timezone-friendly sessions. Each event features networking opportunities and technical content.
      </p>
    </div>
  </section>

  {{ content | safe }}

  {# TODO: Fix this section to work with nested event structure
  <section class="region flow">
    <h2 class="text-center">More nullEDGE Events in 2026</h2>
    <div class="grid-3col gap-l">
      {% for otherEvent in events2026.events %}
        {% if otherEvent.id != event.id %}
        <div class="card flow text-center">
          <h3 class="h4">{{ otherEvent.name }}</h3>
          <p class="text-muted">{{ otherEvent.date | formatDate }} • {% if otherEvent.format == 'networking' %}Networking{% elif otherEvent.format == 'sessions' %}Sessions{% else %}Full Day{% endif %}</p>
          <a href="{{ otherEvent.url }}" class="btn btn-outline">Learn More</a>
        </div>
        {% endif %}
      {% endfor %}
    </div>
  </section>
  #}

  {# CTA Section #}
  <section class="region text-center">
    <div class="card flow prose">
      <h2>{{ ctaTitle }}</h2>
      <p>{{ ctaDescription }}</p>
      <a href="{{ event.registrationUrl }}" class="btn btn-lg btn-primary" target="_blank" rel="noopener noreferrer">Register Free</a>
    </div>
  </section>
</div>

<style>
  .info-item {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 0.5rem;
    color: var(--color-text-muted);
  }

  .button-group {
    display: flex;
    gap: 1rem;
    justify-content: center;
    flex-wrap: wrap;
  }

  .badge {
    display: inline-block;
    padding: 0.25rem 0.75rem;
    border: 1px solid var(--color-border);
    border-radius: var(--border-radius);
    font-size: var(--size-step--1);
    font-weight: 500;
  }

  .text-muted {
    color: var(--color-text-muted);
    font-size: var(--size-step--1);
  }

  .card {
    background: var(--color-bg-surface);
    border: 1px solid var(--color-border);
    border-radius: var(--border-radius);
    padding: var(--space-m-l);
  }

  .card-icon {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 3rem;
    height: 3rem;
    background: color-mix(in srgb, var(--color-primary) 10%, transparent);
    border-radius: var(--border-radius);
    color: var(--color-primary);
  }

  .timezone-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(min(150px, 100%), 1fr));
    gap: var(--space-m);
    text-align: center;
  }

  .timezone-item {
    padding: var(--space-s);
    border-radius: var(--radius);
    transition: all 0.2s ease;
  }

  .timezone-primary {
    background: hsl(var(--primary) / 0.1);
    border: 2px solid hsl(var(--primary) / 0.3);
  }

  .timezone-time {
    font-size: var(--size-step-2);
    font-weight: 700;
    color: var(--color-primary);
  }

  .timezone-city {
    font-size: var(--size-step--1);
    color: var(--color-text-muted);
  }

  .grid-2col {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(min(300px, 100%), 1fr));
    gap: var(--space-m);
  }

  .grid-3col {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(min(200px, 100%), 1fr));
    gap: var(--space-m);
  }

  .gap-l {
    gap: var(--space-l);
  }

  .gap-m {
    gap: var(--space-m);
  }
</style>
